{
    "html.filetypes": [
        "html",
        "phtml",
        "twig",
        "tpl",
        "vue"
    ],
    "languageserver": {
        "phplang": {
            "args": [
                "~/.composer/vendor/felixfbecker/language-server/bin/php-language-server.php"
            ],
            "command": "php",
            "filetypes": [
                "php"
            ]
        }
    },
    "pairs.disableLanguages": [
        "vim"
    ],
    "suggest.minTriggerInputLength": 3,
    "suggest.triggerAfterInsertEnter": true
}
